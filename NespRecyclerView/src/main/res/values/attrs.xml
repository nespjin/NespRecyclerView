<resources>

    <declare-styleable name="NespRecyclerView">
        <!--=========================Empty View=============================-->
        <attr name="emptyText" format="string|reference" />
        <attr name="emptyDrawable" format="reference" />

        <!--=========================Load more=============================-->
        <attr name="maxScreenItems" format="integer" />
        <attr name="loadMoreEnable" format="boolean" />
        <attr name="hideNoMoreData" format="boolean" />
        <attr name="loadMoreTextColor" format="color|reference" />
        <attr name="loadMoreTextSize" format="dimension" />
        <attr name="noMoreDataText" format="string|reference" />
        <attr name="loadingMoreText" format="string|reference" />
        <attr name="loadMoreFailedText" format="string|reference" />
        <attr name="loadMoreBackgroundColor" format="color|reference" />
        <attr name="loadMoreProgressIndeterminateDrawable" format="reference" />
        <attr name="loadMoreProgressIndeterminateDrawableTintColor" format="color|reference" />
        <!--=========================Refresh=============================-->
        <attr name="refreshEnable" format="boolean" />
        <attr name="pullDownText" format="string|reference" />
        <attr name="upToRefreshText" format="string|reference" />
        <attr name="refreshingText" format="string|reference" />
        <attr name="refreshSuccessText" format="string|reference" />
        <attr name="refreshFailedText" format="string|reference" />
        <attr name="refreshBackgroundColor" format="color|reference" />
        <attr name="refreshTextSize" format="dimension" />
        <attr name="refreshTextColor" format="color|reference" />
        <attr name="refreshArrowTintColor" format="color|reference" />
        <attr name="refreshArrowDrawable" format="reference" />
        <attr name="refreshProgressIndeterminateDrawable" format="reference" />
        <attr name="refreshProgressIndeterminateDrawableTintColor" format="reference" />
        <attr name="refreshMaxOffset" format="float" />
        <attr name="refreshMinOffset" format="float" />
        <attr name="refreshRotateOffset" format="float" />

    </declare-styleable>

</resources>