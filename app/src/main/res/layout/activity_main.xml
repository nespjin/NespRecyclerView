<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                tools:context=".ui.activity.MainActivity">

    <LinearLayout android:orientation="vertical"
                  android:paddingTop="20dp"
                  android:paddingBottom="20dp"
                  android:layout_centerInParent="true"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">


        <Button
                android:id="@+id/activity_main_btn_demo_java"
                android:text="@string/title_activity_demo_for_java"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimaryNesp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        <Button
                android:id="@+id/activity_main_btn_demo_kotlin"
                android:text="Demo For Kotlin"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimaryNesp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
    </LinearLayout>


</RelativeLayout>
